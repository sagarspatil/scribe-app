    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-store": "^8.1.0",
    "formik": "^2.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wavesurfer.js": "^7.9.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
